@model MissingPeopleDatabase.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Person Details</h1>


<form>
    <div class="col-4">

        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="SexId" class="control-label"></label>
            <input asp-for="@Model.Sexes.Name" class="form-control" readonly />
        </div>


        <div class="form-group btn-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="index"
               asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
        </div>
    </div>
</form>



